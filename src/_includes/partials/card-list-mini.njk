
<div class="container">
  <div class="row align-items-center justify-content-center">

    {% for item in list %}
    <div class="card col-sm-3" style="min-height: 500px; width: 18rem;background-color: #191a23; ">
      {% if item.img %}
      <img class="card-img-top" style="display: block;height:196px; width: 130px;margin-left: auto;margin-right: auto;" src="{{ item.img }}" alt="Card image cap">
      {% endif %}
      <div class="card-body">
        <h6 class="card-title">
        {% for tag in item.tags %}
        <span class="badge badge-pill badge-info" style="font-size: 10px;">{{ tag }}</span>
        {% endfor %}
      </h6>
        <h3 class="card-title" style="font-size:13px !important;">{{ work.title  | striptags(true) | truncate(50) }}</h3>
        <h6 class="card-subtitle mb-2 text-muted">{{ item.subtitle }}</h6>
        <p class="card-text">{{ item.content }}</p>
        <p class="center">
          <a href="{{ work.buttonLink }}" class="btn btn-primary">{{ item.buttonDesc }}</a>
        </p>
      </div>
    </div>
    {% endfor %}

    </div>

  </div>
</div>
