

<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    {% for testimonial in testimonials %}
        <li data-target="#carouselIndicators" data-slide-to="{{ loop.index0 }}" class="{{ "active" if loop.index0==0 else "" }}"></li>
    {% endfor %}


  </ol>
  <div class="carousel-inner">
    <!-- <div class="carousel-item active">
      <img class="d-block w-100" src="screenshot-home.png" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="screenshot-home.png" alt="Second slide">
    </div> -->


    {% for testimonial in testimonials %}
    <div class="carousel-item {{ "active" if loop.index0==0 else "" }}">
      <blockquote>
        <div class="row">
          <div class="col-sm-8 offset-sm-2">
            <p class="citation">{{ testimonial.quote }}
            </p>
            <p class="right">
              <small><b>{{ testimonial.people }}</b><br />{{ testimonial.job }}</small>
            </p>
          </div>
        </div>
      </blockquote>
    </div>

    {% endfor %}

  </div>


  <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
