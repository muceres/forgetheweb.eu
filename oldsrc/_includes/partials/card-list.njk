<div class="row row-cols-1 row-cols-md-3 g-4">
{% for work in list %}
  <div class="col">
    <div class="card h-100" style="background-color: #191a23;">
    <img  src="{{ work.img }}" alt="{{ work.title }}">
      <div class="card-body">
        <h3 class="card-title">{{ work.title }}
        {% for tag in work.tags %}
        <span class="badge rounded-pill bg-info" style="font-size: 12px;">{{ tag }}</span>
        {% endfor %}
        </h3>
        <br />
    <h6 class="card-subtitle mb-2 text-muted">{{ work.subtitle }}</h6>
    <br />
        <p class="card-text">{{ work.content }}</p>
        <p class="center">
          <a href="{{ work.buttonLink }}" class="btn btn-primary">{{ work.buttonDesc }}</a>
        </p>
      </div>
    </div>
  </div>
{% endfor %}
</div>
